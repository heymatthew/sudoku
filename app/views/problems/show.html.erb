<% if @errors and @errors.any? %>
  <ul class="errors">
    <% @errors.each do |error| %>
      <li><%= error %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for @problem do |form| %>
  <table class="grid">
    <% @problem.grid.rows.each do |row| %>
      <tr>
        <%= render partial: "cell", collection: row %>
      </tr>
    <% end %>
  </table>

  <%= form.submit "Submit Solution" %>
<% end %>
