<% if @errors and @errors.any? %>
  <ul class="errors">
    <% @errors.each do |error| %>
      <li><%= error %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for @problem do |form| %>
  <table class="grid">
    <% @problem.grid.each do |row| %>
      <tr>
        <% row.each do |cell| %>
          <td>
            <% if cell.nil? %>
              <input name="cell[]">
            <% else %>
              <input value="<%= cell %>" disabled="true">
              <input type="hidden" value="<%= cell %>" name="cell[]">
            <% end %>
          </td>
        <% end %>
      </tr>
    <% end %>
  </table>

  <%= form.submit "Submit Solution" %>
<% end %>
